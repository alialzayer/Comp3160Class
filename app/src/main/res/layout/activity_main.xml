<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent"
    android:layout_width="fill_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Welcome"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="false"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/textView2"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:textSize="30sp"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:singleLine="true"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESC"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:textSize="30sp"
            android:singleLine="true"
            android:layout_marginLeft="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action"
            android:id="@+id/textView5"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:textSize="30sp"
            android:singleLine="true"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/textView4"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView6"
            android:layout_marginLeft="35dp" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Add records"
        android:id="@+id/button1"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tx1"
        android:onClick="onClick_AddRecord"
        android:layout_weight="1"
        android:textSize="30sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="display records"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/button2"
        android:onClick="onClick_DisplayRecords"
        android:layout_weight="1"
        android:textSize="30sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="clear records"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="onClick_ClearAll"
        android:id="@+id/button3"
        android:layout_weight="1"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="To The Calendar"
            android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:onClick="onClick_ToCalendar"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="To The Text to Speech"
            android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:onClick="onClick_ToTTS"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:textSize="30sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="To The GPS"
            android:layout_below="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:onClick="onClick_ToGPS"
            android:id="@+id/button9"
            android:layout_weight="1"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>







